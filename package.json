{
  "name": "ballistic-code",
  "version": "1.0.0",
  "description": "A minimal IDE built with electron.",
  "homepage": "https://github.com/marcushcarter/ide#readme",
  "bugs": {
    "url": "https://github.com/marcushcarter/ide/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcushcarter/ide.git"
  },
  "license": "MIT",
  "author": "Marcus Carter",
  "type": "commonjs",
  "main": "main.js",
  "scripts": {
    "start": "nodemon --ext js,css,html --exec electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.marcushcarter.ballistic-code",
    "productName": "Ballistic Code",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico",
      "forceCodeSigning": false,
      "artifactName": "${productName}-Setup-${version}.${ext}"
    }
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "nodemon": "^3.1.11"
  }
}
